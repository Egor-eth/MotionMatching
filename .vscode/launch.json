{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run project",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/unix/${config:launchOption.currentConfig.Project}/${config:launchOption.currentConfig.Project}-${config:launchOption.currentConfig.BuildType}.exe",
            "args": [
                "-project -${config:launchOption.currentConfig.Project}",
                "-showBones -${config:launchOption.currentConfig.showBones}",
                "-showGoal -${config:launchOption.currentConfig.showGoal}",
                "-showMatchingStatistic -${config:launchOption.currentConfig.showMatchingStatistic}",
                "-loadDataBaseFromFBX -${config:launchOption.currentConfig.loadDataBaseFromFBX}",
            ],
            "cwd": "${workspaceFolder}/Builds/unix/${config:launchOption.currentConfig.Project}",
            "preLaunchTask": "Build project",
            "windows": {
                "program": "${workspaceFolder}/Builds/win/${config:launchOption.currentConfig.Project}/${config:launchOption.currentConfig.Project}-${config:launchOption.currentConfig.BuildType}.exe",
                "cwd": "${workspaceFolder}/Builds/win/${config:launchOption.currentConfig.Project}"
            }
        },
        {
            "name": "Test codeGen",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/ECSCodeGen/ECSCodeGen-dev.exe",
            "args": [
                "-project -${config:launchOption.currentConfig.Project}",
                "-ecsPath -${workspaceFolder}/Projects/ECSExample/Sources/Systems",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Builds/ECSCodeGen",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Codegen",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}