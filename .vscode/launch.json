    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run project",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${config:launchOption.currentConfig.Project.name}/${config:launchOption.currentConfig.Project.name}-${config:launchOption.currentConfig.BuildType}.exe",
            "cwd": "${workspaceFolder}/${config:launchOption.currentConfig.Project.name}",
            "args": [],
           // "preLaunchTask": "Build project",
            "linux": {
                "type": "cppdbg",
            }
        },
        {
            "name": "Run release project",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${config:launchOption.currentConfig.Project.name}/${config:launchOption.currentConfig.Project.name}.exe",
            "cwd": "${workspaceFolder}/${config:launchOption.currentConfig.Project.name}",
            "args": [],
           // "preLaunchTask": "Build project",
            "linux": {
                "type": "cppdbg",
            }
        },
        {
            "name": "Run ecs codegen",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ECSCodeGen/ECSCodeGen-${config:launchOption.currentConfig.BuildType}.exe",
            "args": [
                "${workspaceFolder}/sources/${config:launchOption.currentConfig.Project.name}",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/ECSCodeGen",
            "linux": {
                "type": "cppdbg",
            }
        },
    ]
}