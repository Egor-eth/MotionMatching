    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run project",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/unix/${config:launchOption.currentConfig.Project}/${config:launchOption.currentConfig.Project}-${config:launchOption.currentConfig.BuildType}.exe",
            "args": [],
            "cwd": "${workspaceFolder}/Builds/unix/${config:launchOption.currentConfig.Project}",
            "preLaunchTask": "Build project",
            "windows": {
                "program": "${workspaceFolder}/Builds/win/${config:launchOption.currentConfig.Project}/${config:launchOption.currentConfig.Project}-${config:launchOption.currentConfig.BuildType}.exe",
                "cwd": "${workspaceFolder}/Builds/win/${config:launchOption.currentConfig.Project}"
            },
            "linux": {
                "type": "cppdbg",
            }
        },        
        {
            "name": "Run console app",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/unix/${config:launchOption.currentConfig.Project}/${config:launchOption.currentConfig.Project}-${config:launchOption.currentConfig.BuildType}.exe",
            "args": [],
            "cwd": "${workspaceFolder}/Builds/unix/${config:launchOption.currentConfig.Project}",
            "preLaunchTask": "Build ConsoleApp",
            "windows": {
                "program": "${workspaceFolder}/Builds/win/${config:launchOption.currentConfig.Project}/${config:launchOption.currentConfig.Project}-${config:launchOption.currentConfig.BuildType}.exe",
                "cwd": "${workspaceFolder}/Builds/win/${config:launchOption.currentConfig.Project}"
            },
            "linux": {
                "type": "cppdbg",
            }
        },
        {
            "name": "Test codeGen",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/unix/ECSCodeGen/ECSCodeGen-${config:launchOption.currentConfig.BuildType}.exe",
            "args": [
                "${workspaceFolder}/Projects/${config:launchOption.currentConfig.Project}/Sources/Systems",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Builds/ECSCodeGen",
            "windows": {
                "program": "${workspaceFolder}/Builds/win/ECSCodeGen/ECSCodeGen-${config:launchOption.currentConfig.BuildType}.exe",
                "cwd": "${workspaceFolder}/Builds/win/${config:launchOption.currentConfig.Project}"
            },
            "linux": {
                "type": "cppdbg",
            }
        },
        {
            "name": "Test RT compilation",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/unix/RTCompilation/RTCompilation-${config:launchOption.currentConfig.BuildType}.exe",
            "args": [
                "${workspaceFolder}/Projects/${config:launchOption.currentConfig.Project}/Sources/Systems",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Builds/RTCompilation",
            "windows": {
                "program": "${workspaceFolder}/Builds/win/RTCompilation/RTCompilation-${config:launchOption.currentConfig.BuildType}.exe",
                "cwd": "${workspaceFolder}/Builds/win/${config:launchOption.currentConfig.Project}"
            },
            "linux": {
                "type": "cppdbg",
            }
        }
    ]
}