{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/${config:launchOption.currentConfig.Project}/${config:launchOption.currentConfig.BuildType}/${config:launchOption.currentConfig.Project}.exe",
            "args": [
                "-projectPath -${workspaceFolder}/Projects/${config:launchOption.currentConfig.Project}",
                "-commonPath -${workspaceFolder}/Common",
                "-project -${config:launchOption.currentConfig.Project}",
                "-build -${config:launchOption.currentConfig.BuildType}",
                "-showBones -${config:launchOption.currentConfig.showBones}",
                "-showGoal -${config:launchOption.currentConfig.showGoal}",
                "-showMatchingStatistic -${config:launchOption.currentConfig.showMatchingStatistic}",
                "-loadDataBaseFromFBX -${config:launchOption.currentConfig.loadDataBaseFromFBX}",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Builds/${config:launchOption.currentConfig.Project}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build project",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}