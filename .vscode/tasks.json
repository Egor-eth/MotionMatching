{
    "tasks": [
        {
            "type": "shell",
            "label": "Build project",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "./build_script.sh",
            "args": [
                "${config:launchOption.currentConfig.Project}",
                "${config:launchOption.currentConfig.BuildType}",
                "no"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Rebuild project",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "./build_script.sh",
            "args": [
                "${config:launchOption.currentConfig.Project}",
                "${config:launchOption.currentConfig.BuildType}",
                "yes"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}