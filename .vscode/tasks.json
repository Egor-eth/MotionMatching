{
    "tasks": [
        {
            "type": "shell",
            "label": "Build and configure project",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "./build_script.sh",
            "args": [
                "${config:launchOption.currentConfig.Project}",
                "${config:launchOption.currentConfig.BuildType}",
                "no",
                "yes",
                "yes"
            ],
            "windows": {
                "command": "build_script.bat"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Build project",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "./build_script.sh",
            "args": [
                "${config:launchOption.currentConfig.Project}",
                "${config:launchOption.currentConfig.BuildType}",
                "no",
                "yes",
                "no"
            ],
            "windows": {
                "command": "build_script.bat"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Rebuild project",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "./build_script.sh",
            "args": [
                "${config:launchOption.currentConfig.Project}",
                "${config:launchOption.currentConfig.BuildType}",
                "yes",
                "yes",
                "yes"
            ],
            "windows": {
                "command": "build_script.bat"
            },
            "group": {
                "kind": "build",
                "isDefault": true
